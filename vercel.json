{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "5mb",
        "includeFiles": [
          "templates/**",
          "static/**",
          "movie_recommender.joblib"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "app.py"
    }
  ]
}